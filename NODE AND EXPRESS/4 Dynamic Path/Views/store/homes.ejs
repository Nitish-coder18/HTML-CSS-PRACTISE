<%- include('../partials/head') %>
<link rel="stylesheet" href="./styles/output.css">
</head>
<body class="bg-gradient-to-br from-pink-100 via-white to-blue-100 min-h-screen flex flex-col items-center justify-center text-gray-800">

  <h1 class="text-5xl font-extrabold text-rose-600 mb-8">Details Of Home</h1>

<div class="flex gap-5">
  <a href="/host/add-home"
     class="bg-rose-500 hover:bg-rose-600 text-white px-6 py-3 rounded-lg shadow-md transition-all duration-200 mb-10">
    Add Home
  </a>

   <a href="/homes"
     class="bg-rose-500 hover:bg-rose-600 text-white px-6 py-3 rounded-lg shadow-md transition-all duration-200 mb-10">
    Home Detail
  </a>
</div>

  <!-- Homes Container -->
  <div class="flex flex-wrap justify-center gap-8 px-6">
    <% homes.forEach(home => { %>
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 w-80 overflow-hidden">
        <!-- Home Image -->
        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

        <!-- Home Info -->
        <div class="p-5">
          <h2 class="text-2xl font-semibold text-indigo-600 mb-2"><%= home.houseName %></h2>

          <p class="text-gray-600 mb-1">
            <span class="font-medium text-gray-800">Location:</span> <%= home.location %>
          </p>

          <p class="text-gray-600 mb-1">
            <span class="font-medium text-gray-800">Price:</span> ₹<%= home.price %> / night
          </p>

          <p class="text-gray-600">
            <span class="font-medium text-gray-800">Rating:</span> ⭐ <%= home.rating %>
          </p>
        </div>
      </div>
    <% }); %>
  </div>

</body>
</html>
