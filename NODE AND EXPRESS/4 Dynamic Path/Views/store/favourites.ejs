<%- include('../partials/head') %>
<link rel="stylesheet" href="/styles/output.css">
</head>

<body class="min-h-screen bg-gradient-to-br from-pink-200 via-rose-100 to-blue-200 text-gray-900">

<main class="py-10 px-6">
  <div class="container mx-auto max-w-4xl">

    <h1 class="text-4xl font-bold text-center mb-8 text-indigo-600">Favourites ‚ûï</h1>

    <% if (homes.length === 0) { %>
      <p class="text-center text-gray-700 text-xl">No favourites yet!</p>
    <% } else { %>
      <ul class="space-y-4">
        <% homes.forEach(home => { %>
          <li class="flex items-center justify-between bg-white/90 backdrop-blur-md border border-white/30 rounded-lg p-4 shadow-md hover:shadow-xl transition">

            <!-- Left: Image + Info -->
            <div class="flex items-center gap-4">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-24 h-24 rounded-lg object-cover">
              <div>
                <h2 class="text-2xl font-semibold text-gray-800"><%= home.houseName %></h2>
                <p class="text-gray-600">‚≠ê <%= home.rating %> | üìç <%= home.location %></p>
              </div>
            </div>

            <!-- Right: Price + Buttons -->
            <div class="flex items-center gap-4">
              <span class="text-xl font-bold text-indigo-600">‚Çπ<%= home.price %> / night</span>

              <!-- Remove Button -->
              <form action="/favourites/remove/<%= home.id %>" method="POST">
                <button class="px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded-full font-bold">
                  Remove
                </button>
              </form>

            </div>

          </li>
        <% }) %>
      </ul>
    <% } %>

    <!-- Back to Homes -->
    <div class="mt-10 text-center">
      <a href="/" class="px-6 py-2 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg font-semibold">
        ‚Üê Back to Homes
      </a>
    </div>

  </div>
</main>
</body>
</html>
