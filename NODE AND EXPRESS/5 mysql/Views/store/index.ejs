<%- include('../partials/head') %>
<link rel="stylesheet" href="/styles/output.css">
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-pink-200 via-rose-100 to-blue-200 text-gray-800 flex flex-col">

  <!-- Header Section -->
  <header class="text-center py-14">
    <h1 class="text-6xl md:text-7xl font-extrabold bg-gradient-to-r from-rose-600 via-pink-500 to-indigo-600 bg-clip-text text-transparent drop-shadow-md mb-6">
      Welcome to Airbnb
    </h1>
    <p class="text-lg md:text-xl text-gray-700 font-medium mb-10">
      Find your dream home away from home ‚ú®
    </p>

    <!-- Action Buttons -->
    <div class="flex justify-center gap-6 flex-wrap">
      <a href="/host/add-home"
         class="px-8 py-3 rounded-xl text-white text-lg font-semibold bg-gradient-to-r from-pink-500 to-rose-500 hover:from-rose-600 hover:to-pink-600 shadow-lg hover:shadow-rose-200 transition-all duration-300">
        ‚ûï Add Home
      </a>

    <a href="/favourites"
      class="px-8 py-3 rounded-xl text-white text-lg font-semibold bg-gradient-to-r from-green-400 to-emerald-600 hover:from-emerald-500 hover:to-green-500 shadow-lg hover:shadow-green-200 transition-all duration-300">
      ‚ù§Ô∏è Favourites
    </a>

      <a href="/homes"
         class="px-8 py-3 rounded-xl text-white text-lg font-semibold bg-gradient-to-r from-indigo-500 to-blue-500 hover:from-blue-600 hover:to-indigo-600 shadow-lg hover:shadow-indigo-200 transition-all duration-300">
        üè† View All Homes
      </a>
    </div>
  </header>

  <!-- Homes Grid -->
  <main class="flex-grow px-6 pb-20">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-10 justify-items-center">
      <% homes.forEach(home => { %>
        <div class="group relative bg-white/90 backdrop-blur-md rounded-3xl shadow-xl hover:shadow-2xl border border-white/50 overflow-hidden transform hover:-translate-y-2 transition-all duration-300 w-full max-w-sm">
          
          <!-- Home Image -->
          <div class="relative overflow-hidden">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" 
                 class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
            <div class="absolute bottom-3 left-3 text-white text-sm bg-black/40 px-3 py-1 rounded-lg backdrop-blur-sm">
              ‚≠ê <%= home.rating %>/5
            </div>
          </div>

          <!-- Info Section -->
          <div class="p-6 text-center">
            <h2 class="text-2xl font-semibold text-indigo-600 mb-2 truncate">
              <%= home.houseName %>
            </h2>

            <p class="text-gray-600 mb-1">
              üìç <span class="font-medium text-gray-800"><%= home.location %></span>
            </p>

            <p class="text-gray-600 mb-1">
              üí∞ <span class="font-medium text-gray-800">‚Çπ<%= home.price %></span> / night
            </p>

            <div class="flex flex-col items-center gap-3 mt-5">
              <!-- Details Button -->
              <a href="/homes/<%= home.id %>"
                 class="w-full text-center bg-gradient-to-r from-indigo-500 to-blue-500 hover:from-blue-600 hover:to-indigo-600 text-white font-medium px-5 py-2 rounded-lg shadow-md transition-all duration-300">
                üîç View Details
              </a>

              <!-- Favourite Button -->
              <form action="/favourites" method="POST" class="w-full">
                <input type="hidden" name="id" value="<%= home.id %>">
                <button onclick="alert('added');"
                  class="w-full text-center bg-gradient-to-r from-green-400 to-emerald-600 hover:from-emerald-500 hover:to-green-500 text-white font-medium px-5 py-2 rounded-lg shadow-md transition-all duration-300">
                  ‚ù§Ô∏è Add to Favourite
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="text-center py-6 text-gray-600 text-sm border-t border-gray-300/40 mt-auto">
    ¬© <%= new Date().getFullYear() %> Airbnb Clone ‚Äî Built with ‚ù§Ô∏è using Node + TailwindCSS
  </footer>

</body>
</html>
