  <%- include('partials/head') %>
  <link rel="stylesheet" href="./styles/output.css">
</head>
<body class="bg-gradient-to-br from-pink-100 via-white to-blue-100 min-h-screen flex flex-col items-center justify-center text-gray-800">

  <h1 class="text-5xl font-extrabold text-rose-600 mb-6">Welcome to Airbnb</h1>

  <a href="/host/add-home"
     class="bg-rose-500 hover:bg-rose-600 text-white px-6 py-3 rounded-lg shadow-md transition-all duration-200">
    Add Home
  </a>

  <% homes.forEach(home => { %>
    <h1 class="text-2xl font-semibold text-indigo-600 mt-4 p-4 rounded-lg bg-white shadow-md hover:shadow-lg transition-all duration-300">
      <%= home.houseName %>
    </h1>
  <% }); %>

</body>
</html>
